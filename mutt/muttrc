set my_mutthome_abs=`readlink -f "${HOME}/.mutt"` 


source ~/.mutt/mutt-basic.rc
source ~/.mutt/mutt-status-sidebar.rc
source ~/.mutt/mutt-index-view.rc

# Sync email
macro index o "<shell-escape>offlineimap<enter>"  "run offlineimap to sync all mail"

source ~/.mutt/mutt-pager-view.rc
source ~/.mutt/mutt-composing-view.rc

# Mailboxes
mailboxes `cat ~/.mutt/config-gmail/mailboxes-gmail ~/.localmail-custom/gmail-personal-mailboxes ~/.mutt/config-news/mailboxes-news | tr -d "\n"`

# Extra configs
source ~/.mutt/themes/current-theme.rc
source ~/.mutt/mutt-mu-search.rc
source ~/.mutt/mutt-goobook.rc
source ~/.mutt/mutt-gpg.rc

# Account Settings, news
source ~/.mutt/config-gmail/mutt-gmail.rc
source `F="$my_mutthome_abs/config-news/mutt-news.rc"; if [ ! -s "$F" ]; then F=/dev/null; fi; echo "$F"` 

